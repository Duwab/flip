<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
		android:padding="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:visibility="gone"
            android:id="@+id/notif_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ask something to the world!"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <TextView
            android:visibility="gone"
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description" />

        <EditText
            android:id="@+id/create_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10" >

            <requestFocus />
        </EditText>

        <Button
            android:id="@+id/create_launch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Create Question" />

		<ProgressBar
            android:visibility="gone"
		    android:id="@+id/create_launching"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content" />
        
		<com.loopj.android.image.SmartImageView
		    android:id="@+id/create_image_preview"
		    android:layout_width="wrap_content"
		    android:layout_height="100dp"
		    android:layout_gravity="center"
		    android:layout_margin="0px"
		    android:maxHeight="200dp"
		    android:padding="0px"
		    android:visibility="gone"
		    android:scaleType="fitCenter" />
		
        <Button
            android:id="@+id/create_add_image"
            android:layout_width="wrap_content"
            android:layout_height="100dp"
            android:text="Add Image" />

        <TextView
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="65dp"
            android:text="Demo upload"
            android:gravity="center"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <Button
            android:visibility="gone"
            android:id="@+id/upload_file"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Choose image" />

        <Button
            android:visibility="gone"
            android:id="@+id/upload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Upload" />
		
        <TextView
            android:visibility="gone"
            android:id="@+id/onphone_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <TextView
            android:visibility="gone"
            android:id="@+id/onserver_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall" />
        
        <LinearLayout
            android:visibility="gone"
            android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:orientation="horizontal"
		    android:gravity="center"
		    android:layout_alignParentRight="true" >
	        <ImageView
	            android:id="@+id/onPhone"
	            android:layout_width="100px"
	            android:layout_height="wrap_content"
	            android:src="@drawable/action_search" />
			
	        <TextView
	            android:id="@+id/onserver_id2"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:textAppearance="?android:attr/textAppearanceSmall" />
	
	        <com.loopj.android.image.SmartImageView
	            android:id="@+id/onServer"
	            android:layout_width="100px"
	            android:layout_height="wrap_content"
	            android:src="@drawable/action_search" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>
