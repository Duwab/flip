<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.duwab.flipit.MainActivity"
    android:background="#FFF" >
	<LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content"
	    android:orientation="vertical">

		<ProgressBar
		    android:id="@+id/dashboard_loading_question"
		    android:layout_width="wrap_content"
	    	android:layout_gravity="center"
		    android:layout_height="wrap_content" />
	
		<TextView
		    android:id="@+id/dashboard_message_no_more"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#6F6"
		    android:gravity="center"
		    android:text="No more question for the moment" />

		<TextView
		    android:id="@+id/dashboard_message_no_connection"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#F66"
		    android:gravity="center"
		    android:text="Can't reach the server on network" />

		<TextView
		    android:id="@+id/dashboard_message_default"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:textColor="#F66"
		    android:gravity="center" />

		<VideoView
		    android:id="@+id/videoView1"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" />
		
		<LinearLayout
		    android:id="@+id/scroll"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:orientation="vertical">
	
			<TextView
			    android:id="@+id/textView1"
			    android:layout_width="wrap_content"
			    android:layout_height="wrap_content" />
	
	    </LinearLayout>

    </LinearLayout>

</ScrollView>
